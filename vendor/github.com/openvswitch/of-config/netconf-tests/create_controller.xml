<?xml version="1.0"?>
<capable-switch xmlns="urn:onf:config:yang" xmlns:nc="urn:ietf:params:xml:ns:netconf:base:1.0">
  <id>openvswitch</id>
  <logical-switches>
    <switch>
      <id>ofc-bridge</id>
      <controllers>
        <controller nc:operation="create">
          <id>my_controller</id>
          <ip-address>10.1.1.2</ip-address>
          <port>12345</port>
          <local-ip-address>10.1.1.1</local-ip-address>
          <protocol>tcp</protocol>
        </controller>
      </controllers>
    </switch>
  </logical-switches>
</capable-switch>
